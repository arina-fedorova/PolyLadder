{
  "name": "@polyladder/db",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "init": "tsx src/init-dev-db.ts",
    "migrate": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate -m src/migrations -j ts",
    "migrate:up": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate up -m src/migrations -j ts",
    "migrate:down": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate down -m src/migrations -j ts",
    "migrate:create": "tsx node_modules/node-pg-migrate/bin/node-pg-migrate create -m src/migrations -j ts",
    "seed": "tsx src/seeds/index.ts"
  },
  "dependencies": {
    "@polyladder/core": "workspace:*",
    "bcrypt": "^5.1.1",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/pg": "^8.16.0",
    "node-pg-migrate": "^8.0.4",
    "tsx": "^4.21.0",
    "vitest": "^3.2.4"
  }
}
