# =====================================================
# PolyLadder Production Environment Variables
#
# Copy this file to .env.prod and fill in the values
# NEVER commit .env.prod to version control!
# =====================================================

# Database Configuration
POSTGRES_DB=polyladder
POSTGRES_USER=polyladder
POSTGRES_PASSWORD=CHANGE_ME_TO_SECURE_PASSWORD

# JWT Configuration (minimum 32 characters)
JWT_SECRET=CHANGE_ME_TO_SECURE_SECRET_AT_LEAST_32_CHARS
JWT_REFRESH_SECRET=CHANGE_ME_TO_ANOTHER_SECURE_SECRET

# Optional: API port (default: 3000)
API_PORT=3000

# Optional: Log level (default: info)
# Options: trace, debug, info, warn, error, fatal
LOG_LEVEL=info

# Optional: Image tag for versioning (default: latest)
TAG=latest
