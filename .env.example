# ============================================
# PolyLadder Environment Variables
# ============================================
# Learner-facing web application.
# Copy this file to .env and configure.
# ============================================

# ============================================
# Required Variables
# ============================================

# Database - PostgreSQL connection string
DATABASE_URL=postgres://dev:dev@localhost:5432/polyladder

# Authentication - JWT signing secret (min 32 characters)
JWT_SECRET=dev-secret-change-in-production-min-32-chars

# ============================================
# Optional Variables (with defaults)
# ============================================

# Application
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# API URLs
API_URL=http://localhost:3000

# Frontend (Vite)
VITE_API_URL=http://localhost:3000/api/v1

# Auth expiry (use time strings like "7d", "15m", "1h")
JWT_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Storage configuration
STORAGE_TYPE=local
STORAGE_LOCAL_PATH=./uploads

# S3 storage (if STORAGE_TYPE=s3)
# S3_BUCKET=your-bucket-name
# S3_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
